{
  "version": 2,
  "name": "reports",
  "builds": [
    { "src": "client/dist/**/*", "use": "@now/static" },
    { "src": "graphql/dist/index.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "^/graphql", "dest": "graphql/dist/index.js" },
    {
      "src": "^/manifest.webmanifest",
      "dest": "client/dist/manifest.webmanifest"
    },
    { "src": "^/(.*)[.]([a-zA-Z0-9]{2,4})$", "dest": "client/dist/$1.$2" },

    { "src": "^/(.*)", "dest": "client/dist/index.html" }
  ],
  "env": {
    "MONGODB_URL": "@mongodb_url",
    "SENDGRID_API_KEY": "@sendgrid_api_key",
    "JWT_SECRET": "@jwt_secret"
  }
}
