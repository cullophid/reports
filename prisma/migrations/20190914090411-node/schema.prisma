model Report {
  id     String  @default(cuid()) @id
  owner  User?
  slides Slide[]
  title  String
}

model Slide {
  id     String  @default(cuid()) @id
  nodes  Node[]
  report Report?
}

model Node {
  id     String     @default(cuid()) @id
  chart  NodeChart?
  height Int
  slide  Slide
  text   String?
  type   NodeType
  width  Int
  x      Int
  y      Int
}

enum NodeType {
  Text
  Chart
}

model NodeChart {
  id    String @default(cuid()) @id
  node  Node
  query String
}

model User {
  id           String   @default(cuid()) @id
  createdAt    DateTime @default(now())
  email        String   @unique
  firstName    String
  lastName     String
  reports      Report[]
  refreshToken String?
}