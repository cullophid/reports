generator photonjs {
  provider = "photonjs"
}

model Node {
  id     String     @default(cuid()) @id
  chart  NodeChart?
  height Int
  slide  Slide?
  text   String?
  type   String
  width  Int
  x      Int
  y      Int
}

model NodeChart {
  id    String @default(cuid()) @id
  node  Node[]
  query String
}

model Report {
  id    String  @default(cuid()) @id
  owner User?
  slide Slide[]
  title String
}

model Slide {
  id     String  @default(cuid()) @id
  node   Node[]
  report Report?
}

model User {
  id        String   @default(cuid()) @id
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String
  lastName  String
  report    Report[]
}